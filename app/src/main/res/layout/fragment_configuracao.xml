<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ConfiguracaoFragment" android:id="@+id/frameLayout"
                                                   android:background="#21F3C9">
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/categoriasSeletor"
            app:layout_constraintTop_toBottomOf="@+id/categoriastitulo"
            app:layout_constraintBottom_toTopOf="@+id/dificuldadetitulo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            android:layout_marginRight="24dp" android:layout_marginEnd="24dp"/>
    <TextView
            android:text="@string/categoria"
            android:layout_width="89dp"
            android:layout_height="28dp"
            android:id="@+id/categoriastitulo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/categoriasSeletor" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp" android:gravity="center" android:textSize="18sp"
            android:background="#00E8FD" android:textColor="#000000"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dificuldadeSeletor"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/dificuldadetitulo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="4dp" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            android:layout_marginRight="24dp" android:layout_marginEnd="24dp"/>
    <TextView
            android:text="@string/dificuldade"
            android:layout_width="86dp"
            android:layout_height="26dp"
            android:id="@+id/dificuldadetitulo"
            app:layout_constraintTop_toBottomOf="@+id/categoriasSeletor"
            app:layout_constraintBottom_toTopOf="@+id/dificuldadeSeletor" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp" android:gravity="center" android:textSize="18sp"
            android:background="#00E8FD" android:textColor="#000000"/>
    <ImageView
            android:src="@drawable/quiz_300"
            android:layout_width="165dp"
            android:layout_height="190dp"
            android:id="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/categoriastitulo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.449" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>